@model Vidly.ViewModels.MovieFormViewModel
@{
	@Model.Title
}

<h2>MovieForm</h2>

@using (@Html.BeginForm("Save", "Movie"))
{
<div class="form-group">
	@Html.LabelFor(m => m.Movie.Name)
	@Html.TextBoxFor(m => m.Movie.Name, new { @class = "form-control" })
	@Html.ValidationMessageFor(m => m.Movie.Name)
</div>
<div class="form-group">
	@Html.LabelFor(m => m.Movie.DateReleased)
	@Html.TextBoxFor(m => m.Movie.DateReleased, new { @class = "form-control" })
	@Html.ValidationMessageFor(m => m.Movie.DateReleased)
</div>
<div class="form-group">
	@Html.LabelFor(m => m.Movie.GenreId)
	@Html.ValidationMessageFor(m => m.Movie.GenreId)

	@Html.DropDownListFor(m => m.Movie.GenreId,
   new SelectList(Model.Genres, "Id", "Name"), "Select Genre",
	@*" " ---> adding a blank item on top of the dropdown list*@
	new { @class = "form-control" })
</div>
<div class="form-group">
	@Html.LabelFor(m => m.Movie.NumberInStock)
	@Html.TextBoxFor(m => m.Movie.NumberInStock, new { @class = "form-control" })
	@Html.ValidationMessageFor(m => m.Movie.NumberInStock)
</div>
	@Html.HiddenFor(m => m.Movie.Id)
	@Html.AntiForgeryToken()
	<button type="submit" class="btn btn-primary">Save</button>
}

@* enable client side validation*@
@section scripts
	{
	@Scripts.Render("~/bundles/jqueryval")
}

